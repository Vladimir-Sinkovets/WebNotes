@model NoteCreateViewModel

<button id="addTagButton">Add tag</button>
<form method="post" asp-action="Create" asp-controller="Notes">
    <div class="form-group">
        <label>Title</label>
        <input class="form-control" type="text" asp-for="Title"/>
    </div>

    <div class="form-group">
        <label>Text</label>
        <textarea class="form-control" rows="9" asp-for="Text"></textarea>
    </div>

    <div class="form-group">
        <button class="btn btn-primary">Save</button>
    </div>
</form>
