@model NoteListViewModel

@{
    const int offset = 3;
}

<ul>
    @foreach (var note in Model.Notes)
    {
    <li class="list-group">
        <div class="mt-1">
            <a asp-controller="Notes" asp-action="Read" asp-route-id="@note.Id"
                class="list-group-item list-group-item-action">
                <strong>@note.Title</strong>
            </a>
        </div>
    </li>
    }
</ul>

<ul class="pagination">
    <li class="page-item">
        <a class="page-link" asp-action="NoteList" asp-controller="Notes" asp-route-page="1" >
            1
        </a>
    </li>
    @if (Model.CurrentPage - offset > 2)
    {
        <li class="page-item disabled">
            <a class="page-link" href="#">
                ...
            </a>
        </li>
            
    }

    @for (int i = Model.CurrentPage - offset; i < Model.CurrentPage + (offset + 1) && i <= Model.LastPage; i++)
    {
        @if (i <= 1 || i >= Model.LastPage)
            continue;

        <li class="page-item">
            <a class="page-link" asp-action="NoteList" asp-controller="Notes" asp-route-page="@i">
                @i
            </a>
        </li>
    }

    @if (Model.CurrentPage + (offset + 1) < Model.LastPage)
    {
        <li class="page-item disabled">
            <a class="page-link" href="#">
                ...
            </a>
        </li>
    }

    <li class="page-item">
        <a class="page-link" asp-action="NoteList" asp-controller="Notes" asp-route-page="@Model.LastPage">
            @Model.LastPage
        </a>
    </li>
</ul>